<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/iVList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Channel name..."
        android:id="@+id/tVListImage1"
        android:textSize="20dp"
        android:layout_above="@+id/tVListImage2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
        android:background="#70000000"
        android:layout_alignRight="@+id/tVListImage3"
        android:layout_alignEnd="@+id/tVListImage3" />

    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Playing..."
        android:id="@+id/tVListImage2"
        android:layout_alignBottom="@+id/iVList"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#70000000"
        android:textColor="#ffffff"
        android:layout_toLeftOf="@+id/tVListImage3"
        android:layout_toStartOf="@+id/tVListImage3" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Viewers..."
        android:id="@+id/tVListImage3"
        android:layout_alignTop="@+id/tVListImage2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/iVList"
        android:background="#70000000"
        android:textColor="#ffffff" />
</RelativeLayout>